<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textHistoricoNomeEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nome da empresa"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textHistoricoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data: 15/04/2024" />

    <TextView
        android:id="@+id/textHistoricoEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o: rua almeida prado, 1300"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textHistoricoPgto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pgto: Dinheiro"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textHistoricoTaxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taxa:  R$ 10.00"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textHistoricoValorTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ValorTotal: R$ 30.00"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textHistoricoStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Status: Finalizado"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textHistoricoPedidoItens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1) X - Tudo (1 X R$ 25.50)"
        android:textColor="#E32B1D"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <include layout="@layout/divisor" />

</LinearLayout>